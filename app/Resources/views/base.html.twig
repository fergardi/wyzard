<!DOCTYPE HTML>
{# comprime la salida html #}
{# % spaceless % #}
<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no" />
        <title>Archmage - {% block title %}{% endblock %}</title>
        {# block css #}
        {% block stylesheets %}
            {# con los css no funciona el @Bundle shortcut #}
            {% stylesheets output='css/base.min.css' filter='cssrewrite'
            'bower/normalize-css/normalize.css'
            'bower/fontawesome/css/font-awesome.css'
            '@ArchmageGameBundle/Resources/public/css/theme.css'
            'bower/bootstrap-select/dist/css/bootstrap-select.css'
            'bower/datatables-bootstrap3-plugin/media/css/datatables-bootstrap3.css'
            '@ArchmageGameBundle/Resources/public/css/style.css'
            %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
            <link href='http://fonts.googleapis.com/css?family=MedievalSharp' rel='stylesheet' type='text/css' />
            {% endstylesheets %}
        {% endblock %}
        {# favicon #}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    {# body #}
    <body>
    <img src="{{ asset('bundles/archmagegame/images/background/theme.jpg') }}" class="background" />
    {# block topbar menu #}
    {% block navbar %}{% endblock %}
    {# block flashbag messages #}
    {% block flashbag %}
    <div class="container">
        {% for type, flashMessages in app.session.flashbag.all() %}
            {% for flashMessage in flashMessages %}
        <div class="col-xs-12 alert alert-{{ type }} alert-dismissable text-responsive text-center" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="close"><i class="fa fa-fw fa-times-circle"></i></button>
            {# |raw para que pase por el controlador codigos html como <a href>, sino los trunca #}
            <i class="fa fa-fw fa-lg fa-exclamation-triangle"></i> {{ flashMessage|raw }}
        </div>
            {% endfor %}
        {% endfor %}
    </div>
    {% endblock %}
    {# block body #}
    {% block body %}{% endblock %}
    {# block footer #}
    {% block footer %}{% endblock %}
    {# block js #}
    {% block javascripts %}
        {% javascripts output='js/base.min.js'
            'bower/jquery/jquery.js'
            'bower/datatables/media/js/jquery.dataTables.js'
            'bower/datatables-bootstrap3-plugin/media/js/datatables-bootstrap3.js'
            'bower/bootstrap/dist/js/bootstrap.js'
            'bower/bootstrap-select/dist/js/bootstrap-select.js'
            'bower/bootstrap-validator/js/validator.js'

        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}
