{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Mensajes{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <h1><i class="fa fa-fw fa-envelope"></i>Mensajes</h1>
                </div>
                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-calendar"></i><span class="hidden-xs">Fecha</span></th>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-user"></i><span class="hidden-xs">Mago</span></th>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-question-circle"></i><span class="hidden-xs">Asunto</span></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for message in player.messages %}
                        <tr>
                            <td class="text-center">{{ message.datetime|date('d/m/Y H:i:s') }}</td>
                            <td class="text-center"><a href="{{ path('archmage_game_account_profile') }}">{{ message.who.nick|default('Admin') }}</a></td>
                            <td class="text-center"><i class="fa fa-fw fa-envelop"></i><a data-toggle="collapse" href="#message">{{ message.subject }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="col-xs-12">
                <div class="panel panel-default collapse" id="message">
                    <div class="panel-heading text-center">Asunto</div>
                    <div class="panel-body text-padded">
                        <div class="col-xs-12">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#datatable').dataTable({
                "order": [[ 0, "desc" ]],
                "aoColumns": [
                    {"sType": "date", "bSortable": true },
                    {"sType": "string", "bSortable": true },
                    {"sType": "string", "bSortable": true }
                ],
                "sDom": 't<"col-xs-12 text-center"fp>',
                "displayStart": 0,
                'pagingType': 'full_numbers',
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Ver _MENU_",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ning√∫n mago disponible",
                    "sInfo": "Mostrando magos del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando magos del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ magos)",
                    "sInfoPostFix": "",
                    "sSearch": "",
                    "searchPlaceholder": "Buscar",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "",
                        "sLast": "",
                        "sNext": "<i class='fa fa-fw fa-search'></i>",
                        "sPrevious": "<i class='fa fa-fw fa-search'></i>"
                    },
                    "oAria": {
                        "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                }
            });
        });
        $.fn.dataTableExt.pager.numbers_length = 5;
    </script>
{% endblock %}