{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Mensajes{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header text-center">
                <h1><i class="fa fa-fw fa-envelope"></i>Mensajes
                {% if message is defined %}
                    <br><small>{{ message.subject|truncate(20) }}</small>
                {% endif %}
                </h1>
            </div>
            {% if message is not defined %}
            <table id="datatable" class="table table-striped table-bordered text-responsive" cellspacing="0" width="100%">
                <thead>
                <tr>
                    <th class="text-center"><i class="fa fa-fw fa-calendar"></i><span class="hidden-xs">Fecha</span></th>
                    <th class="text-center"><i class="fa fa-fw fa-user"></i><span class="hidden-xs">Jugador</span></th>
                    <th class="text-center"><i class="fa fa-fw fa-question-circle"></i><span class="hidden-xs">Asunto</span></th>
                </tr>
                </thead>
                <tbody>
                    {% for message in player.messages %}
                    <tr>
                        <td class="text-center">{{ message.datetime|date('d/m/Y H:i:s') }}</td>
                        <td class="text-center"><a href="{{ path('archmage_game_account_profile', { 'player': message.owner.nick|default('Admin') } ) }}" class="link"><span class="label label-{{ message.owner.faction.class|default('extra') }}">{{ message.owner.nick|default('Admin') }}</span></a></td>
                        <td class="text-center"><i class="fa fa-fw fa-envelop"></i><a href="{{ path( 'archmage_game_account_message', { 'hash': message.hash } ) }}" class="link">{{ message.subject|truncate(20) }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {# show message #}
            {% else %}
                {% for i in 0..text['content']|length - 1 %}
            <div class="col-xs-12 col-md-{{ text['content'][i]['length'] }} col-md-offset-{{ text['content'][i]['offset'] }} alert alert-{{ text['content'][i]['class'] }} text-{{ text['content'][i]['align'] }} text-responsive" role="alert">
                <i class="fa fa-fw fa-exclamation-triangle"></i>{{ text['content'][i]['text'] }}
            </div>
                {% endfor %}
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_account_message') }}" class="btn btn-default"><i class="fa fa-fw fa-arrow-left"></i><span class="hidden-xs">Volver</span></a>
                    <a href="{{ path('archmage_game_account_message') }}" class="btn btn-default"><i class="fa fa-fw fa-mail-reply"></i><span class="hidden-xs">Responder</span></a>
                    <a href="{{ path('archmage_game_account_message') }}" class="btn btn-default"><i class="fa fa-fw fa-trash"></i><span class="hidden-xs">Borrar</span></a>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        $('#datatable').dataTable({
            "order": [[ 0, "desc" ]],
            "aoColumns": [
                {"sType": "date", "bSortable": true },
                {"sType": "string", "bSortable": true },
                {"sType": "string", "bSortable": true }
            ],
            "sDom": 't<"col-xs-12 text-center"fp>',
            "displayStart": 0,
            'pagingType': 'full_numbers',
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Ver _MENU_",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ning√∫n mago disponible",
                "sInfo": "Mostrando magos del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando magos del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ magos)",
                "sInfoPostFix": "",
                "sSearch": "",
                "searchPlaceholder": "Buscar",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst": "",
                    "sLast": "",
                    "sNext": "<i class='fa fa-fw fa-search'></i>",
                    "sPrevious": "<i class='fa fa-fw fa-search'></i>"
                },
                "oAria": {
                    "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            }
        });
    });
    $.fn.dataTableExt.pager.numbers_length = 5;
</script>
{% endblock %}