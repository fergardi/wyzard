{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Perfil{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header text-center">
                <h1><i class="fa fa-fw fa-trophy"></i>Perfil</h1>
            </div>
        </div>
    </div>
    <div class="jumbotron text-center">
        <div class="row">
            <div class="col-xs-12">
                <div class="box-icon alert alert-{{ player.faction.class }}">
                    <span class="fa fa-fw fa-4x fa-user"></span>
                </div>
                <div class="info">
                    <h1 class="text-center">{{ player.nick }}</h1>
                    <a href="{{ path('archmage_game_army_attack') }}" class="btn btn-default"><i class="fa fa-fw fa-lg fa-flag"></i><span class="hidden-xs">Atacar</span></a>
                    <a href="{{ path('archmage_game_magic_conjure') }}" class="btn btn-default"><i class="fa fa-fw fa-lg fa-magic"></i><span class="hidden-xs">Conjurar</span></a>
                    <a href="{{ path('archmage_game_account_message') }}" class="btn btn-default"><i class="fa fa-fw fa-lg fa-send"></i><span class="hidden-xs">Mensaje</span></a>
                </div>
                <br>
                {% for progress in progresses %}
                <div class="progress">
                    <div class="progress-bar progress-bar-{{ progress.class }} progress-bar-striped" role="progressbar" aria-valuenow="{{ progress.researchs }}" aria-valuemin="0" aria-valuemax="{{ progress.total }}" style="min-width:4em; width: {{ progress.researchs/progress.total*100 }}%">
                        <span>{{ progress.researchs }}/{{ progress.total }}</span>
                    </div>
                </div>
                {% endfor %}
                <br/>
                {% for i in 1..6 %}
                <div class="col-xs-6 col-md-2 text-center">
                    <i class="fa fa-fw fa-4x fa-trophy"></i>
                    <br/>
                    Logro
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}