{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Ranking{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <h1><i class="fa fa-fw fa-line-chart"></i> Ranking</h1>
                </div>
                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th class="text-right"><i class="fa fa-fw fa-lg fa-list-ol"></i> Posición</th>
                            <th class="text-right"><i class="fa fa-fw fa-lg fa-list-ol"></i> Poder</th>
                            <th class="text-center"><i class="fa fa-fw fa-lg fa-user"></i> Nick</th>
                            <th class="text-center"><i class="fa fa-fw fa-lg fa-list-ol"></i> Facción</th>
                            <th class="text-right"><i class="fa fa-fw fa-lg fa-globe"></i> Tierras</th>
                            <th class="text-right"><i class="fa fa-fw fa-lg fa-home"></i> Fortalezas</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% set faction=['doom','darkness','nature','ghost','holy'] %}
                        {% for i in 1..200 %}
                        <tr>
                            <td class="text-right">{{ random(1000) }}</td>
                            <td class="text-right">{{ random(1000) }}</td>
                            <td class="text-center">Nombre del Mago</td>
                            <td class="text-center"><img class="image-thumbnail custom-icon" src="{{ asset('bundles/archmagegame/images/faction/' ~ faction[random(4)]) }}"> {{ faction[random(4)]|capitalize }}</td>
                            <td class="text-right">{{ random(1000) }}</td>
                            <td class="text-right">{{ random(1000) }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function() {
            $('#datatable').dataTable({
                "order": [[ 0, "asc" ]],
                "aoColumns": [
                    {"sType": "num-fmt", "bSortable": true },
                    {"sType": "num-fmt", "bSortable": true },
                    {"sType": "string", "bSortable": true },
                    {"sType": "string", "bSortable": true },
                    {"sType": "num-fmt", "bSortable": true },
                    {"sType": "num-fmt", "bSortable": true }
                ],
                "sDom": 't<"col-xs-12 text-center"fp>',
                "displayStart": 0,
                'pagingType': 'full_numbers',
                "language": {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Ver _MENU_",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún mago disponible",
                    "sInfo": "Mostrando magos del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando magos del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ magos)",
                    "sInfoPostFix": "",
                    "sSearch": "",
                    "searchPlaceholder": "Buscar",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "",
                        "sLast": "",
                        "sNext": "<i class='fa fa-fw fa-search'></i>",
                        "sPrevious": "<i class='fa fa-fw fa-search'></i>"
                    },
                    "oAria": {
                        "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                }
            });
        });
        $.fn.dataTableExt.pager.numbers_length = 5;
    </script>
{% endblock %}