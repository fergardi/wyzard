{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Ranking{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header text-center">
                <h1><i class="fa fa-fw fa-line-chart"></i>Ranking</h1>
            </div>
            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-list-ol"></i> <span class="hidden-xs">Posición</span></th>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-rocket"></i> <span class="hidden-xs">Poder</span></th>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-user"></i> <span class="hidden-xs">Nick</span></th>
                        <th class="text-center hidden-xs"><i class="fa fa-fw fa-lg fa-rebel"></i> <span class="hidden-xs">Facción</span></th>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-globe"></i> <span class="hidden-xs">Tierras</span></th>
                        <th class="text-center"><i class="fa fa-fw fa-lg fa-shield"></i> <span class="hidden-xs">Fortalezas</span></th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in players %}
                    <tr>
                        <td class="text-right">{{ random(10)|nf }}</td>
                        <td class="text-right">{{ player.power|nf }}</td>
                        <td class="text-center"><a href="{{ path('archmage_game_account_profile', { 'player': player.nick } ) }}">{{ player.nick }}</a></td>
                        <td class="text-center hidden-xs">{{ player.faction.name }}</td>
                        <td class="text-right">{{ player.building('Tierras').quantity|nf }}</td>
                        <td class="text-right">{{ player.building('Fortalezas').quantity|nf }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    var search = '{{ search }}';
    $(document).ready(function() {
        var oTable = $('#datatable').dataTable({
            "order": [[ 0, "asc" ]],
            "aoColumns": [
                {"sType": "num-fmt", "bSortable": true },
                {"sType": "num-fmt", "bSortable": true },
                {"sType": "string", "bSortable": true },
                {"sType": "string", "bSortable": true },
                {"sType": "num-fmt", "bSortable": true },
                {"sType": "num-fmt", "bSortable": true }
            ],
            "sDom": 't<"col-xs-12 text-center"fp>',
            "displayStart": 0,
            'pagingType': 'full_numbers',
            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Ver _MENU_",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ningún mago disponible",
                "sInfo": "Mostrando magos del _START_ al _END_ de un total de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando magos del 0 al 0 de un total de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ magos)",
                "sInfoPostFix": "",
                "sSearch": "",
                "searchPlaceholder": "Buscar",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst": "",
                    "sLast": "",
                    "sNext": "<i class='fa fa-fw fa-search'></i>",
                    "sPrevious": "<i class='fa fa-fw fa-search'></i>"
                },
                "oAria": {
                    "sSortAscending":  ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            }
        });
        $.fn.dataTableExt.pager.numbers_length = 5;
        oTable.fnFilter(search);
    });
</script>
{% endblock %}