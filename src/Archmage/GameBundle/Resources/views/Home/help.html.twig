{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Ayuda{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="goal"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Introducci√≥n</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="factions"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Facciones</h1>
                </div>
            </div>
            {% for faction in factions %}
                <div class="col-xs-12 col-md-6">
                    <div class="panel panel-{{ faction.class }}">
                        <div class="panel-heading text-center">{{ faction.name }}</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-4">
                                    <img class="custom-thumbnail" src="{{ asset(faction.image) }}">
                                </div>
                                <div class="col-xs-8">
                                    <p>{{ faction.description }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="auctions"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Subastas</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="battles"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Batallas</h1>
                </div>
            </div>
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="buildings"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Edificios</h1>
                </div>
            </div>
            {% for building in buildings %}
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading text-center">{{ building.name }}</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <img class="custom-thumbnail" src="{{ asset( building.image ) }}">
                            </div>
                            <div class="col-xs-8">
                                <p>{{ building.description }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="units"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Unidades</h1>
                </div>
            </div>
            {% for unit in units %}
            <a name="{{ unit.name }}"></a>
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-{{ unit.faction.class }}">
                    <div class="panel-heading text-center">{{ unit.name }}</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <img class="custom-thumbnail" src="{{ asset( unit.image ) }}">
                            </div>
                            <div class="col-xs-8 text-padded">
                                <div class="col-xs-4"><i class="fa fa-fw fa-rocket"></i>{{ unit.attack|nf }}</div>
                                <div class="col-xs-4"><i class="fa fa-fw fa-shield"></i>{{ unit.defense|nf }}</div>
                                <div class="col-xs-4"><i class="fa fa-fw fa-flash"></i>{{ unit.speed }}</div>
                                <div class="col-xs-4"><i class="fa fa-fw fa-money"></i>{{ unit.goldMaintenance|nf }}</div>
                                <div class="col-xs-4"><i class="fa fa-fw fa-tint"></i>{{ unit.manaMaintenance|nf }}</div>
                                <div class="col-xs-4"><i class="fa fa-fw fa-users"></i>{{ unit.peopleMaintenance|nf }}</div>
                                <div class="col-xs-6"><a href="#"><i class="fa fa-fw fa-user"></i>{{ unit.family.name }}</a></div>
                                <div class="col-xs-6"><a href="#"><i class="fa fa-fw fa-cogs"></i>{{ unit.type.name }}</a></div>
                                <div class="col-xs-12"><a href="#"><i class="fa fa-fw fa-joomla"></i>Habilidad</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <a name="spells"></a>
                    <h1><i class="fa fa-fw fa-info-circle"></i> Hechizos</h1>
                </div>
            </div>
            {% for spell in spells %}
                <div class="col-xs-12 col-md-6">
                    <div class="panel panel-{{ spell.faction.class }}">
                        <div class="panel-heading text-center">{{ spell.name }}</div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-4">
                                    <img class="custom-thumbnail" src="{{ asset( spell.image ) }}">
                                </div>
                                <div class="col-xs-8 text-padded">
                                    <div class="col-xs-4">{{ spell.manaCost|nf }}<i class="fa fa-fw fa-tint"></i></div>
                                    <div class="col-xs-4">{{ spell.unitCount|nf }}<i class="fa fa-fw fa-users"></i></div>
                                    <div class="col-xs-4">{{ spell.level }}<i class="fa fa-fw fa-magic"></i></div>
                                    <div class="col-xs-4">{{ spell.turnCost|nf }}<i class="fa fa-fw fa-hourglass-half"></i></div>
                                    <div class="col-xs-4">{{ spell.turnResearch|nf }}<i class="fa fa-fw fa-hourglass"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}