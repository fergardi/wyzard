{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Reino{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <div class="page-header text-center">
                <h1><i class="fa fa-fw fa-bar-chart"></i>Resumen</h1>
                {% include "ArchmageGameBundle::resources.html.twig" with {'player': player} %}
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-bank"></i>Reino</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/economy.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-money"></i>{{ player.gold|nf }} <span class="label label-extra">Oro</span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-money"></i>{{ player.goldresourceperturn|nf }}-{{ player.goldmaintenanceperturn|nf }} = <span class="label label-{% if player.goldresourceperturn -  player.goldmaintenanceperturn >= 0 %}success{% else %}danger{% endif %}">{{ (player.goldresourceperturn -  player.goldmaintenanceperturn)|nf }}</span> <span class="label label-extra">Oro/Turno</span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-users"></i>{{ player.people|nf }}/{{ player.peoplecap|nf }} <span class="label label-extra">Personas</span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-users"></i>{{ player.peopleresourceperturn|nf }}-{{ player.peoplemaintenanceperturn|nf }} = <span class="label label-{% if player.peopleresourceperturn -  player.peoplemaintenanceperturn >= 0 %}success{% else %}danger{% endif %}">{{ (player.peopleresourceperturn -  player.peoplemaintenanceperturn)|nf }}</span> <span class="label label-extra">Personas/Turno</span></div>
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_kingdom_tax') }}" class="btn btn-default"><i class="fa fa-fw fa-money"></i><span class="hidden-xs">Recaudar</span></a>
                    <a href="{{ path('archmage_game_kingdom_auction') }}" class="btn btn-default"><i class="fa fa-fw fa-legal"></i><span class="hidden-xs">Subasta</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-flask"></i>Magia</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/magic.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-tint"></i>{{ player.mana|nf }}/{{ player.manacap|nf }} <span class="label label-extra">Maná</span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-tint"></i>{{ player.manaresourceperturn|nf }}-{{ player.manamaintenanceperturn|nf }} = <span class="label label-{% if player.manaresourceperturn - player.manamaintenanceperturn >= 0 %}success{% else %}danger{% endif %}">{{ (player.manaresourceperturn -  player.manamaintenanceperturn)|nf }}</span> <span class="label label-extra">Maná/Turno</span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-magic"></i><span class="label label-extra">Nivel de Magia</span> {{ player.magic|nf }}</div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-diamond"></i><span class="label label-extra"><a href="{{ path('archmage_game_magic_artifact') }}" class="link">Artefactos</a></span> {{ player.artifacts|nf }}</div>
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_magic_charge') }}" class="btn btn-default"><i class="fa fa-fw fa-tint"></i><span class="hidden-xs">Cargar</span></a>
                    <a href="{{ path('archmage_game_magic_conjure') }}" class="btn btn-default"><i class="fa fa-fw fa-magic"></i><span class="hidden-xs">Conjurar</span></a>
                    <a href="{{ path('archmage_game_magic_research') }}" class="btn btn-default"><i class="fa fa-fw fa-graduation-cap"></i><span class="hidden-xs">Investigar</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-globe"></i>Territorio</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/territory.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {% for construction in player.constructions %}
                            {# row #}
                            <div class="col-xs-6"><i class="fa fa-fw fa-home"></i><span class="label label-extra"><a href="{{ path('archmage_game_home_help') }}#{{ construction.building.name|slug }}" class="link">{{ construction.building.name }}</a></span> {{ construction.quantity|nf }}</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_territory_explore') }}" class="btn btn-default"><i class="fa fa-fw fa-search"></i><span class="hidden-xs">Explorar</span></a>
                    <a href="{{ path('archmage_game_territory_build') }}" class="btn btn-default"><i class="fa fa-fw fa-wrench"></i><span class="hidden-xs">Construir</span></a>
                    <a href="{{ path('archmage_game_territory_demolish') }}" class="btn btn-default"><i class="fa fa-fw fa-bomb"></i><span class="hidden-xs">Derribar</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-balance-scale"></i>Templo</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/temple.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {% for enchantment in player.enchantmentsVictim %}
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-link"></i><span class="label label-{{ enchantment.spell.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ enchantment.spell.name|slug }}" class="link">{{ enchantment.spell.name }}</a></span> [{{ enchantment.owner.magic }}] ({{ enchantment.expiration|nf }}/{{ (enchantment.spell.turnsExpiration * enchantment.owner.magic)|nf }})</div>
                            {% else %}
                            {# row #}
                            <div class="col-xs-12">Ningún encantamiento en tu reino</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_kingdom_temple') }}" class="btn btn-default"><i class="fa fa-fw fa-link"></i><span class="hidden-xs">Rezar</span></a>
                    <a href="{{ path('archmage_game_magic_dispell') }}" class="btn btn-default"><i class="fa fa-fw fa-chain-broken"></i><span class="hidden-xs">Desencantar</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-flag-checkered"></i>Ejército</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/army.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {% for troop in player.troops %}
                                {# row #}
                                <div class="col-xs-12"><i class="fa fa-fw fa-users"></i><span class="label label-{{ troop.unit.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ troop.unit.name|slug }}" class="link">{{ troop.unit.name }}</a></span> {{ troop.quantity|nf }}</div>
                            {% else %}
                                {# row #}
                                <div class="col-xs-12">Ninguna tropa en tu ejército</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_army_recruit') }}" class="btn btn-default"><i class="fa fa-fw fa-user-plus"></i><span class="hidden-xs">Reclutar</span></a>
                    <a href="{{ path('archmage_game_army_disband') }}" class="btn btn-default"><i class="fa fa-fw fa-user-times"></i><span class="hidden-xs">Desbandar</span></a>
                    <a href="{{ path('archmage_game_army_attack') }}" class="btn btn-default"><i class="fa fa-fw fa-flag"></i><span class="hidden-xs">Atacar</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-beer"></i>Taberna</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/tavern.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {% for contract in player.contracts %}
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-user"></i><span class="label label-{{ contract.hero.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ contract.hero.name|slug }}" class="link">{{ contract.hero.name }}</a></span> [<i class="fa fa-fw fa-star"></i>{{ contract.level|nf }}] ({{ contract.experience }}/{{ contract.hero.experience * contract.level }})</div>
                            {% else %}
                            <div class="col-xs-12">Ningún héroe en tu reino</div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_kingdom_auction') }}" class="btn btn-default"><i class="fa fa-fw fa-legal"></i><span class="hidden-xs">Contratar</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-shield"></i>Defensa</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/defense.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-shield"></i>{{ player.armyDefense|nf }}% <span class="label label-extra">Defensa Física</span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-magic"></i>{{ player.magicDefense|nf }}% <span class="label label-extra">Defensa Mágica</span></div>
                            {# row #}
                            <div class="col-xs-12">{% if player.research %}<i class="fa fa-fw fa-magic"></i><span class="label label-{{ player.research.spell.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ player.research.spell.name|slug }}" class="link">{{ player.research.spell.name }}</a></span>{% else %}Ningún hechizo en defensa{% endif %}</div>
                            {# row #}
                            <div class="col-xs-12">{% if player.item %}<i class="fa fa-fw fa-diamond"></i><span class="label label-{{ player.item.artifact.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ player.item.artifact.name|slug }}" class="link">{{ player.item.artifact.name }}</a></span>{% else %}Ningún artefacto en defensa{% endif %}</div>
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_magic_conjure') }}" class="btn btn-default"><i class="fa fa-fw fa-magic"></i><span class="hidden-xs">Hechizos</span></a>
                    <a href="{{ path('archmage_game_magic_artifact') }}" class="btn btn-default"><i class="fa fa-fw fa-diamond"></i><span class="hidden-xs">Artefactos</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-user"></i>Cuenta</div>
                <div class="panel-body text-responsive">
                    <div class="row">
                        <div class="col-xs-4">
                            <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/social.jpg') }}">
                        </div>
                        <div class="col-xs-8 text-padded">
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-envelope"></i>{{ player.messages|length|nf }} <span class="label label-extra"><a href="{{ path('archmage_game_account_message') }}" class="link">Mensajes</a></span></div>
                            {# row #}
                            <div class="col-xs-12"><i class="fa fa-fw fa-rocket"></i>{{ player.power|nf }} <span class="label label-extra"><a href="{{ path('archmage_game_account_ranking') }}" class="link">Poder</a></span></div>
                        </div>
                    </div>
                </div>
                <div class="btn-group btn-group-justified" role="group" aria-label="...">
                    <a href="{{ path('archmage_game_account_message') }}" class="btn btn-default"><i class="fa fa-fw fa-envelope"></i><span class="hidden-xs">Mensajes</span></a>
                    <a href="{{ path('archmage_game_account_ranking') }}" class="btn btn-default"><i class="fa fa-fw fa-line-chart"></i><span class="hidden-xs">Ranking</span></a>
                    <a href="{{ path('archmage_game_account_profile') }}" class="btn btn-default"><i class="fa fa-fw fa-trophy"></i><span class="hidden-xs">Perfil</span></a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 hidden-xs hidden-sm">
            <div class="panel panel-default">
                <div class="panel-heading text-center"><i class="fa fa-fw fa-pie-chart"></i>Balance total</div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-condensed text-responsive" style="box-shadow: none !important; margin-bottom:0 !important;">
                        <thead>
                            <tr>
                                <th class="text-center" colspan="3"></th>
                                <th class="text-center" colspan="4">Ganancia</th>
                                <th class="text-center" colspan="4">Pérdida</th>
                                <th class="text-center" colspan="4">Total</th>
                            </tr>
                            <tr>
                                <th class="text-center">Posesión</th>
                                <th class="text-center">#</th>
                                <th class="text-center">Poder</th>
                                <th class="text-center"><i class="fa fa-fw fa-globe"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-money"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-group"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-tint"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-globe"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-money"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-group"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-tint"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-globe"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-money"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-group"></i></th>
                                <th class="text-center"><i class="fa fa-fw fa-tint"></i></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for construction in player.constructions %}
                            <tr>
                                <td class="text-left"><i class="fa fa-fw fa-home"></i><span class="label label-extra"><a href="{{ path('archmage_game_home_help') }}#{{ construction.building.name|slug }}" class="link">{{ construction.building.name }}</a></span></td>
                                <td class="text-right">{{ construction.quantity|nf }}</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.power)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.goldResource)|nf }}</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.peopleResource)|nf }}</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.manaResource)|nf }}</td>
                                <td class="text-right">-0</td>
                                <td class="text-right">-{{ (construction.quantity * construction.building.goldMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (construction.quantity * construction.building.peopleMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (construction.quantity * construction.building.manaMaintenance)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.goldResource - construction.quantity * construction.building.goldMaintenance)|nf }}</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.peopleResource - construction.quantity * construction.building.peopleMaintenance)|nf }}</td>
                                <td class="text-right">{{ (construction.quantity * construction.building.manaResource - construction.quantity * construction.building.manaMaintenance)|nf }}</td>
                            </tr>
                            {% endfor %}
                            {% for troop in player.troops %}
                            <tr>
                                <td class="text-left"><i class="fa fa-fw fa-group"></i><span class="label label-{{ troop.unit.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ troop.unit.name|slug }}" class="link">{{ troop.unit.name }}</a></span></td>
                                <td class="text-right">{{ troop.quantity|nf }}</td>
                                <td class="text-right">{{ (troop.quantity * troop.unit.power)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">0</td>
                                <td class="text-right">0</td>
                                <td class="text-right">0</td>
                                <td class="text-right">-0</td>
                                <td class="text-right">-{{ (troop.quantity * troop.unit.goldMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (troop.quantity * troop.unit.peopleMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (troop.quantity * troop.unit.manaMaintenance)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">-{{ (troop.quantity * troop.unit.goldMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (troop.quantity * troop.unit.peopleMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (troop.quantity * troop.unit.manaMaintenance)|nf }}</td>
                            </tr>
                            {% endfor %}
                            {% for contract in player.contracts %}
                            <tr>
                                <td class="text-left"><i class="fa fa-fw fa-user"></i><span class="label label-{{ contract.hero.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ contract.hero.name|slug }}" class="link">{{ contract.hero.name }}</a></span></td>
                                <td class="text-right">{{ contract.level|nf }}</td>
                                <td class="text-right">{{ (contract.level * contract.hero.power)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">{% if contract.hero.skill.goldBonus > 0 %}{{ (contract.level * contract.hero.skill.goldBonus)|nf }}{% else %}0{% endif %}%</td>
                                <td class="text-right">{% if contract.hero.skill.peopleBonus > 0 %}{{ (contract.level * contract.hero.skill.peopleBonus)|nf }}{% else %}0{% endif %}%</td>
                                <td class="text-right">{% if contract.hero.skill.manaBonus > 0 %}{{ (contract.level * contract.hero.skill.manaBonus)|nf }}{% else %}0{% endif %}%</td>
                                <td class="text-right">-0</td>
                                <td class="text-right">-{{ (contract.level * contract.hero.goldMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (contract.level * contract.hero.peopleMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (contract.level * contract.hero.manaMaintenance)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">-{{ (contract.level * contract.hero.goldMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (contract.level * contract.hero.peopleMaintenance)|nf }}</td>
                                <td class="text-right">-{{ (contract.level * contract.hero.manaMaintenance)|nf }}</td>
                            </tr>
                            {% endfor %}
                            {% for enchantment in player.enchantmentsOwner %}
                            <tr>
                                <td class="text-left"><i class="fa fa-fw fa-link"></i><span class="label label-{{ enchantment.spell.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ enchantment.spell.name|slug }}" class="link">{{ enchantment.spell.name }}</a></span> a <span class="label label-{{ enchantment.victim.faction.class }}"><a href="{{ path('archmage_game_account_profile', {'id': enchantment.victim.id}) }}" class="link">{{ enchantment.victim.nick }}</a></span></td>
                                <td class="text-right">{{ player.magic|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">0</td>
                                <td class="text-right">0%</td>
                                <td class="text-right">0%</td>
                                <td class="text-right">0%</td>
                                <td class="text-right">-0</td>
                                <td class="text-right">-{{ (enchantment.spell.goldMaintenance * enchantment.owner.magic)|nf }}</td>
                                <td class="text-right">-{{ (enchantment.spell.peopleMaintenance * enchantment.owner.magic)|nf }}</td>
                                <td class="text-right">-{{ (enchantment.spell.manaMaintenance * enchantment.owner.magic)|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">-{{ (enchantment.spell.goldMaintenance * enchantment.owner.magic)|nf }}</td>
                                <td class="text-right">-{{ (enchantment.spell.peopleMaintenance * enchantment.owner.magic)|nf }}</td>
                                <td class="text-right">-{{ (enchantment.spell.manaMaintenance * enchantment.owner.magic)|nf }}</td>
                            </tr>
                            {% endfor %}
                            {% for enchantment in player.enchantmentsVictim %}
                            <tr>
                                <td class="text-left"><i class="fa fa-fw fa-link"></i><span class="label label-{{ enchantment.spell.faction.class }}"><a href="{{ path('archmage_game_home_help') }}#{{ enchantment.spell.name|slug }}" class="link">{{ enchantment.spell.name }}</a></span> de <span class="label label-{{ enchantment.owner.faction.class }}"><a href="{{ path('archmage_game_account_profile', {'id': enchantment.owner.id}) }}" class="link">{{ enchantment.owner.nick }}</a></span></td>
                                <td class="text-right">{{ enchantment.owner.magic|nf }}</td>
                                <td class="text-right">0</td>
                                <td class="text-right">{% if enchantment.spell.skill.terrainBonus > 0 %}{{ enchantment.spell.skill.terrainBonus }}{% else %}0{% endif %}</td>
                                <td class="text-right">{% if enchantment.spell.skill.goldBonus > 0 %}{{ enchantment.spell.skill.goldBonus * enchantment.owner.magic }}{% else %}0{% endif %}%</td>
                                <td class="text-right">{% if enchantment.spell.skill.peopleBonus > 0 %}{{ enchantment.spell.skill.peopleBonus * enchantment.owner.magic }}{% else %}0{% endif %}%</td>
                                <td class="text-right">{% if enchantment.spell.skill.manaBonus > 0 %}{{ enchantment.spell.skill.manaBonus * enchantment.owner.magic }}{% else %}0{% endif %}%</td>
                                <td class="text-right">{% if enchantment.spell.skill.terrainBonus < 0 %}{{ enchantment.spell.skill.terrainBonus * enchantment.owner.magic }}{% else %}-0{% endif %}</td>
                                <td class="text-right">{% if enchantment.spell.skill.goldBonus < 0 %}{{ enchantment.spell.skill.goldBonus * enchantment.owner.magic }}{% else %}-0{% endif %}%</td>
                                <td class="text-right">{% if enchantment.spell.skill.peopleBonus < 0 %}{{ enchantment.spell.skill.peopleBonus * enchantment.owner.magic }}{% else %}-0{% endif %}%</td>
                                <td class="text-right">{% if enchantment.spell.skill.manaBonus < 0 %}{{ enchantment.spell.skill.manaBonus * enchantment.owner.magic }}{% else %}-0{% endif %}%</td>
                                <td class="text-right">{% if enchantment.spell.skill.terrainBonus > 0 %}{{ enchantment.spell.skill.terrainBonus }}{% else %}{{ enchantment.spell.skill.terrainBonus * enchantment.owner.magic }}{% endif %}</td>
                                <td class="text-right">{{ enchantment.spell.skill.goldBonus * enchantment.owner.magic }}%</td>
                                <td class="text-right">{{ enchantment.spell.skill.peopleBonus * enchantment.owner.magic }}%</td>
                                <td class="text-right">{{ enchantment.spell.skill.manaBonus * enchantment.owner.magic }}%</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                        <tfoot>
                            <tr>
                                <td class="text-center" colspan="2">Total</td>
                                <td class="text-right">{{ player.power|nf }}</td>
                                <td class="text-right">{{ player.terrainResourcePerTurn|nf }}</td>
                                <td class="text-right">{{ player.goldResourcePerTurn|nf }}</td>
                                <td class="text-right">{{ player.peopleResourcePerTurn|nf }}</td>
                                <td class="text-right">{{ player.manaResourcePerTurn|nf }}</td>
                                <td class="text-right">{{ player.terrainMaintenancePerTurn|nf }}</td>
                                <td class="text-right">{{ player.goldMaintenancePerTurn|nf }}</td>
                                <td class="text-right">{{ player.peopleMaintenancePerTurn|nf }}</td>
                                <td class="text-right">{{ player.manaMaintenancePerTurn|nf }}</td>
                                <td class="text-right"><span class="label label-{% if (player.terrainResourcePerTurn - player.terrainMaintenancePerTurn) >= 0 %}success{% else %}danger{% endif %}">{{ (player.terrainResourcePerTurn - player.terrainMaintenancePerTurn)|nf }}</span></td>
                                <td class="text-right"><span class="label label-{% if (player.goldResourcePerTurn - player.goldMaintenancePerTurn) >= 0 %}success{% else %}danger{% endif %}">{{ (player.goldResourcePerTurn - player.goldMaintenancePerTurn)|nf }}</span></td>
                                <td class="text-right"><span class="label label-{% if (player.peopleResourcePerTurn - player.peopleMaintenancePerTurn) >= 0 %}success{% else %}danger{% endif %}">{{ (player.peopleResourcePerTurn - player.peopleMaintenancePerTurn)|nf }}</span></td>
                                <td class="text-right"><span class="label label-{% if (player.manaResourcePerTurn - player.manaMaintenancePerTurn) >= 0 %}success{% else %}danger{% endif %}">{{ (player.manaResourcePerTurn - player.manaMaintenancePerTurn)|nf }}</span></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}