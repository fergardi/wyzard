{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Recaudar{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-offset-3 col-md-6 col-xs-12">
                <div class="page-header text-center">
                    <h1><i class="fa fa-fw fa-money"></i> Recaudar oro<br><small><i class="fa fa-fw fa-hourglass"></i>300</small></h1>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading text-center"><i class="fa fa-fw fa-lg fa-money"></i> {{ random(10000000)|nf }} oro</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <img class="custom-thumbnail" src="{{ asset('bundles/archmagegame/images/kingdom/economy.jpg') }}">
                            </div>
                            <div class="col-xs-8 text-padded">
                                Texto descriptivo
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-center">
                        <form class="form-inline" data-toggle="validator">
                            <div class="form-group has-feedback">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-fw fa-lg fa-hourglass-half"></i> Recaudar</button>
                                    </div>
                                    <input type="number" class="form-control" id="turns" min="1" max="300" value="0" required/>
                                    <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}