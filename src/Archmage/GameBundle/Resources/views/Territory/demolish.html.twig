{% extends "ArchmageGameBundle::layout.html.twig" %}

{% block title %}Derribar{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="page-header text-center">
                    <h1><i class="fa fa-fw fa-bomb"></i> Derribar<br><small><i class="fa fa-fw fa-hourglass"></i>300</small></h1>
                </div>
            </div>
            {% for construction in constructions %}
            <div class="col-xs-12 col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading text-center"><a href="{{ path('archmage_game_home_help') }}#{{ construction.name|slug }}">{{ construction.name }}</a> [{{ random(1000)|nf }}]</div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-4">
                                <img class="custom-thumbnail" src="{{ asset( construction.image ) }}">
                            </div>
                            <div class="col-xs-8 text-padded">
                                {{ construction.description }}
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer text-center">
                        <form class="form-inline" data-toggle="validator">
                            <div class="form-group has-feedback">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="fa fa-fw fa-lg fa-bomb"></i> Derribar</button>
                                    </div>
                                    <input type="number" class="form-control" id="turns" min="1" max="300" value="0" required/>
                                    <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}